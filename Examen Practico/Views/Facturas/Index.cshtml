@{
    ViewData["Title"] = "Home Page";
}

<br />
<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Facturas</h2>
    </div>
    <div class="col-3 offset-3">
        <a asp-action="Insert" asp-controller="Facturas" class="btn btn-info from-control text-white">
            Agregar Factura
        </a>
    </div>
    <div class="col-12 border p-3">
        <table id="FacturasTable" class="table table-striped table-bordered" style="width:100%">
            <thead>
				<tr>
					<th>Cliente</th>
					<th>Nit</th>
					<th>Fecha</th>
					<th>Total</th>
					<th>Acciones</th>
				</tr>
            </thead>
        </table> 
    </div>
</div>

@section Scripts{
    <script src="~/js/FacturaList.js"></script>
}